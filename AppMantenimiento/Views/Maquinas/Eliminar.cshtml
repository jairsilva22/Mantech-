@model MaquinaViewModel
@{
    ViewData["Title"] = "Eliminar Maquina";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger" style="max-width: 400px; margin: auto;">
        <div class="card-header bg-danger text-white text-center">
            <h4><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body text-center">
            <p class="fs-5">¿Estás seguro de que deseas eliminar  <strong>@Model.Nombre</strong>?</p>
            <p class="text-muted">Esta acción no se puede deshacer.</p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
            <form asp-action="ConfirmarEliminacion" asp-controller="Maquinas" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
            </form>
        </div>
    </div>
</div>

