<div class="d-flex justify-content-between align-items-center mb-3">
	<h6 class="fw-semibold">Acciones del checklist</h6>
	<button class="btn btn-sm btn-success d-flex align-items-center gap-1" onclick="manejarClickAgregarItem()">
		<i class="bi bi-plus-circle"></i> Agregar acción
	</button>
</div>

<div data-bind="foreach: items">
	<div class="card mb-2 shadow-sm border-0" style="background-color: #f9f9f9;">
		<div class="card-body p-3">
			<div class="row align-items-start">
				<div class="col-10">
					<!-- Mostrar descripción -->
					<span class="fw-semibold" style="cursor: pointer;"
						  data-bind="text: descripcion, hidden: modoEdicion, click: manejarClickitem"></span>

					<!-- Input de edición -->
					<textarea class="form-control mb-2"
							  name="txtItemsDescripcion"
							  rows="2"
							  placeholder="Agrega una descripción..."
							  data-bind="value: descripcion, visible: modoEdicion">
					</textarea>
				</div>

				<!-- Botones -->
				<div class="col-2 text-end" data-bind="visible: modoEdicion">
					<div class="btn-group">
						<button class="btn btn-sm btn-outline-primary"
								data-bind="click: manejarClickSalvarItem">
							<i class="bi bi-check-lg"></i>
						</button>

						<button class="btn btn-sm btn-outline-secondary"
								data-bind="click: manejarClickCancelarItem">
							<i class="bi bi-x-lg"></i>
						</button>

						<!-- Solo se muestra si ya existe -->
						<button class="btn btn-sm btn-outline-danger"
								data-bind="hidden: esNuevo, click: manejarClickBorrarItem">
							<i class="bi bi-trash"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
